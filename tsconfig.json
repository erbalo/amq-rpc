{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "allowJs": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./lib",
        //"declarationDir": "./lib/dts",
        "moduleResolution": "node",
        "types": [
            "node"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}